<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Noel's Voice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  {% include "components/navbar.html.jinja" %}

  <div class="position-absolute top-50 start-50 translate-middle">
    <main class="container row mx-auto">
      <div class="row">
        <div class="col">
          <div class="card h-100">
            <div class="row">
              <div class="col-md-4 d-flex align-items-center">
                <img src="{{ product['image'] }}" class="img-fluid rounded-start h-auto w-auto">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">{{ product['name'] }}</h5>
                  <p class="card-text">{{ product['description'] }}</p>
                  <p class="card-text"><small class="text-body-secondary">{{ product['price'] }}$</small></p>
                  <form action="/product/{{ product['id'] }}/cart" method="post">

                    <div class="mb-3"></div>
                    <label for="qty" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="qty" min="1" max="2" value="1" name="qty">
                </div>
                <button class="btn btn-primary" type="submit">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <form id="review" action-="/products/<product_id>/reviews" method="post">
       <label for="floatingInput">Comments</label>
        <input type="txt" name="comments" class="absolute-bottom, container" id="floatingInput"
          placeholder="Input Comment..." required>
       <label for="floatingInput">Ratings</label>
        <input id="rating" type="number" name="rating" class="absolute-bottom, container" id="floatingInput" placeholder="1-5"
          min="1" max="5" required>
        
        
        <input class="btn btn-primary" type="submit" value="Submit">
      </form>
    </main>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>

</html>