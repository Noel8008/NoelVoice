<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Noel's Voice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

  {% include "components/navbar.html.jinja" %}

<main class="form-signin w-100 m-auto container">
  <form action="/sign_up" method="post" >
    <img class="mb-4" src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>

{% for message in get_flashed_messages() %}
    <div class="alert alert-primary" role="alert">
    {{ message }}
    </div>
{% endfor%}

    <div class="form-floating">
      <input type="text" name="first_name" class="form-control" id="floatingInput" placeholder="first name" required value="{{ request.form.get('first_name', '') }}">
      <label for="floatingInput">First Name</label>
    </div>
    <p>
    </p>
    <div class="form-floating">
      <input type="text" name="last_name" class="form-control" id="floatingInput" placeholder="last name" required value="{{ request.form.get('last_name', '') }}">
      <label for="floatingInput">Last Name</label>
    </div>
    <p>
    </p>
    <div class="form-floating">
        <input type="text" name="username" class="form-control" id="floatingInput" placeholder="username" required value="{{ request.form.get('username', '') }}">
        <label for="floatingInput">Username</label>
    </div>
    <p>
    </p>
    <div class="form-floating">
      <input type="tel" name= "phone_num" class="form-control" id="floatingInput" placeholder="(123)456-7890" required value="{{ request.form.get('phone_num', '') }}">
      <label for="floatingInput">Phone Number</label>
    </div>
    <p>
    </p>
    <div class="form-floating">
      <input type="email" name= "email" class="form-control" id="floatingInput" placeholder="name@example.com" required value="{{ request.form.get('email', '') }}" >
      <label for="floatingInput">Email address</label>
    </div>
    <p>
    </p>

        
    <div class="form-floating">
      <input type="password" name= "password"class="form-control" id="floatingPassword" placeholder="password" required value="{{ request.form.get('password', '') }}">
      <label for="floatingPassword">Password</label>
    </div>
    <p>
    </p>
    <div class="form-floating">
        <input type="password" name="confirm_pass" class="form-control" id="floatingPassword" placeholder="password" required value="{{ request.form.get('confirm_pass', '') }}">
        <label for="floatingPassword">Re-Enter Password</label>
    </div>    
    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign up</button>